#!/bin/bash
function usage {
    echo "用法：${0##*/} [-m --message | -h --help]"
}

message="日常跟新"

# 处理参数，如果指定commit字符串
while [[ -n $1 ]]; do
	case $1 in
		-m|--message) shift
					  message="$1"
					  ;;
		-h|--help) usage
				   exit
				   ;;
		*) usage >&2
		   exit 1
		   ;;
	esac
	shift
done

if [[ -d ".git" ]]; then 		# 如果是git项目根目录
	# echo $(pwd)
	if [[ -z $(git diff) ]]; then # 如果无修改
		echo $(my_brown "无需跟新")
		exit
	else
		# 显示跟新内容
		echo $(my_green "跟新的内容有：")
		git status

		# 确认跟新的交互
		echo -n $(my_green "是否推送到github上？(yes/no)： ")
		read

		case $REPLY in
			y|Y|yes) echo $(my_green "添加所有更改...")
					 git add .
					 echo $(my_green "使用git commit '$message' Commit")
					 git commit -m "$message"
					 echo $(my_green "向远程推送...")
					 git push origin master
					 echo $(my_green "远程跟新结束！")
					 ;;
			*) echo $(my_green "再见，不跟新算求")
			   exit
			   ;;
		esac
	fi
else
	echo $(my_yellow "不是git项目根目录") >&2
	exit 1
fi
