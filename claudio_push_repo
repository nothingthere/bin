#!/bin/bash
# 简单化项目日常提交，将git add . ; git commit -m "..." ; git push origin master 一步完成
function usage {
    echo "用法：${0##*/} [-m --message | -v --verbose | -h --help]"
}

message="日常更新:smile:"				# 用于commit的字符串
verbose=false					# 是否使用git diff命令查看更改情况（不使用默认的git status）

# 处理参数，如果指定commit字符串
while [[ -n $1 ]]; do
	case $1 in
		-m|--message) shift
					  message="$1"
					  ;;
		-v|--verbose) verbose=true
					  ;;
		-h|--help) usage
				   exit
				   ;;
		*) usage >&2
		   exit 1
		   ;;
	esac
	shift
done

# 判断当前文件夹是否为git项目中文件夹
# 每个bash脚本应该使用自己的subshell，所以不会改变命令行中的$PWD参数
# 所以cd ..后，命令行中的当前路径并不会改变
# 不过：是否函数也有自己的subshell，不然这里为何没改变执行git操作的路径？
function in_repo_dir {
    if [[ -d '.git' ]]; then
        # echo "if $PWD"
        return 0
    elif [[ $PWD == '/' ]]; then
        # echo "else $PWD"
        return 1
    else
        # echo "向上一级搜索...$PWD"
        cd ..
        in_repo_dir
    fi
}

if in_repo_dir; then
    # 如果没有跟新项目，则直接退出
    if [[ -n $(git status | grep 'nothing to commit, working tree clean') ]]; then
        # echo $(git status | grep 'clean')
        echo "无需更新，再见！"
        exit 0
    fi
    # 显示更新内容
    echo $(claudio_color --color green "需更新的内容有：")
    # echo "\$verbose = $verbose" # TEST
    if $verbose ; then
        git diff
    else
        git status
    fi

    # 确认更新的交互
    echo -n $(claudio_color --color green "是否推使用'$message'推送到github上？(yes/no)： ")
    read

    case $REPLY in
        y|Y|yes) echo $(claudio_color --color green "添加所有更改...")
		         git add .
		         echo $(claudio_color --color green "使用git commit '$message' Commit...")
		         git commit -m "$message"
		         echo $(claudio_color --color green "远程推送...")
		         if $(git push origin master); then
			         echo $(claudio_color --color green "远程更新结束，再见！")
		         fi
		         ;;
        *) echo $(claudio_color --color green  "再见，不更新算逑！")
           exit
           ;;
    esac
else
	echo $(claudio_color --color yellow "不在git项目目录下，你个SB！") >&2
	exit 1
fi
