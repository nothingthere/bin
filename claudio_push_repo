#!/bin/bash
# 简单化项目日常提交，将git add . ; git commit -m "..." ; git push origin master 一步完成
function usage {
    echo "用法：${0##*/} [-m --message | -h --help]"
}

message="日常跟新"

# 处理参数，如果指定commit字符串
while [[ -n $1 ]]; do
	case $1 in
		-m|--message) shift
					  message="$1"
					  ;;
		-h|--help) usage
				   exit
				   ;;
		*) usage >&2
		   exit 1
		   ;;
	esac
	shift
done

if [[ -d ".git" ]]; then 		# 如果是git项目根目录
	# echo $(pwd)
	if [[ -z $(git diff) ]]; then # 如果无修改
		echo $(claudio_brown "无需跟新")
		exit
	else
		# 显示跟新内容
		echo $(claudio_green "需更新的内容有：")
		git status

		# 确认跟新的交互
		echo -n $(claudio_green "是否推送到github上？(yes/no)： ")
		read

		case $REPLY in
			y|Y|yes) git add .
					 echo $(claudio_green "添加所有更改...完成")
					 git commit -m "$message"
					 echo $(claudio_green "使用git commit '$message' Commit...完成")
					 git push origin master
					 echo $(claudio_green "远程推送...完成")
					 echo "再见！"
					 ;;
			*) echo $(claudio_green "再见，不更新算求")
			   exit
			   ;;
		esac
	fi
else
	echo $(claudio_yellow "不是git项目根目录") >&2
	exit 1
fi
